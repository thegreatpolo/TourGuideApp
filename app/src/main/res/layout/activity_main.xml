<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.tourguideapp.MainActivity"
    android:id="@+id/home">

    <TextView
        android:id="@+id/welcome_to_corsica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/corsica_head"
        android:layout_marginBottom="@dimen/title_layout"
        android:layout_marginRight="@dimen/title_layout"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:padding="@dimen/standardpadding"
        android:text="Welcome to Corsica!"
        android:textColor="@android:color/black"
        android:textSize="@dimen/title"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/corsica_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/borders"
        android:background="@android:color/black">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/corsica_head" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="@dimen/standardpadding"
        android:text="Click anyware to continue" />

</RelativeLayout>
